<style>
    /* General styles */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    color: #333;
}
.content {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}
h1, h2, h3 {
    color: #2c3e50;
}
main {
    margin-top: 20px;
}
.property-listings {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}
.property-listing {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    flex: 1 1 calc(33.333% - 20px);
    display: flex;
    flex-direction: column;
    padding: 20px;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.property-listing:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

.property-listing h2 {
    font-size: 1.5em;
    margin-bottom: 10px;
    color: #007bff;
}

.property-listing h3 {
    font-size: 1.2em;
    margin-bottom: 8px;
    color: #5a5a5a;
    border-bottom: 2px solid #2c3e50;
    padding-bottom: 5px;
}

.property-listing p {
    margin: 0 0 10px;
    line-height: 1.6;
}

/* Bold main info text */
.property-listing p span {
    font-weight: bold;
}

/* Property Images */
.property-images {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 10px;
    margin-top: 10px;
}

.property-images img {
    width: 100%;
    height: 150px;
    border-radius: 8px;
    object-fit: cover;
    transition: transform 0.3s ease-in-out;
}

.property-images img:hover {
    transform: scale(1.05);
}

/* Owner and Property Details */
.owner-details,
.property-details {
    margin-bottom: 15px;
}

.owner-details h3,
.property-details h3 {
    margin-bottom: 10px;
}

/* Responsive Design */
@media (max-width: 992px) {
    .property-listing {
        flex: 1 1 calc(50% - 20px);
    }
}

@media (max-width: 768px) {
    .property-listing {
        flex: 1 1 100%;
    }
}
</style>
